@model Movie

<form asp-method="post" asp-action="MovieSearchResults">
    <h4>Search for a movie title here</h4>
    <input type="text" name="title" />
    <input type="submit" />
</form>

<br />

@{
    if (Model != null)
    {
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="@Model.Poster" class="img-fluid rounded-start">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h4 class="card-title">@Model.Title</h4>
                        <p class="card-text">@Model.Plot</p>
                        <p class="card-text">@Model.Genre</p>
                    </div>
                </div>
            </div>
        </div>
    }
}
